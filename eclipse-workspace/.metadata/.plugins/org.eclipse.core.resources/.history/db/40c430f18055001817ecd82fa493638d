//		Component c_remote = null;
//		URI c_local_id = local.getAnnotation(STRUCTURE_PROPERTY).getURIValue();
//		URI c_remote_id = remote.getAnnotation(STRUCTURE_PROPERTY).getURIValue();
//		if (c_local_id == null && c_remote_id == null) 
